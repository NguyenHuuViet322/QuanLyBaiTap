@model QuanLyNhanKhau.Models.NhanKhau

<div class="modal fade" id="Leave_@Model.IdNhanKhau" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myModalLabel"><strong>Thay đổi nhân khẩu</strong></h4>
            </div>
            <div class="modal-body m-2" style="background:aliceblue;">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Leave_NhanKhau">
                            <input class="form-control" type="hidden" value="@Model.IdNhanKhau" name="id"/>
                            <div class="form-group">
                                <label class="form-control" for="hoten">Họ tên</labe>
                                <input class="form-control" type="text" value="@Model.HoTen" name="hoten" disabled/>
                            </div>
                            <div class="form-group">
                                <label class="form-control" for="CMND">CMND</labe>
                                <input class="form-control" type="text" value="@Model.CMND" name="CMND" disabled/>
                            </div>
                            <label class="form-control">Nguyên nhân</label>
                            <select name="nguyenNhan">
                                <option value="">Chọn nguyên nhân</option>
                                <option value="0">Qua đời</option>
                                <option value="1">Chuyển đi</option>
                                <option value="2">Tạm vắng</option>
                            </select>
                            <div class="form-group">
                                <label class="form-control" for="ngayChuyen">Ngày chuyển</labe>
                                <input class="form-control" type="datetime" name="ngayChuyen" disabled/>    
                            </div>
                            <div class="form-group">
                                <label class="form-control" for="noiChuyen">Nơi chuyển</labe>
                                <input class="form-control" type="text" name="noiChuyen" disabled/>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Lưu thay đổi" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
