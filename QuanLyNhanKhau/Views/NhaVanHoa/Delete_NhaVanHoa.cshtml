@model QuanLyNhanKhau.Models.CoSoVatChat
    
<div class="modal fade" id="deleteCSVC_@Model.IdItem" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myModalLabel"><strong>Xóa thiết bị</strong></h4>
            </div>
            <div class="modal-body m-2" style="background:aliceblue;">
                <div class="form-group">
                    <label asp-for="tenCoSoVatChat" class="control-label"></label>
                    <input asp-for="tenCoSoVatChat" class="form-control" disabled />
                    <span asp-validation-for="tenCoSoVatChat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="soLuong" class="control-label"></label>
                    <input asp-for="soLuong" class="form-control" disabled />
                    <span asp-validation-for="soLuong" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="hienTrang" class="control-label"></label>
                    <input asp-for="hienTrang" class="form-control" disabled />
                    <span asp-validation-for="hienTrang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ghiChu" class="control-label"></label>
                    <input asp-for="ghiChu" class="form-control" disabled />
                    <span asp-validation-for="ghiChu" class="text-danger"></span>
                </div>
                <form asp-action="Delete_NhaVanHoa">
                    <input type="hidden" asp-for="IdItem" />
                    <input type="submit" value="Delete" class="btn btn-default" /> 
                </form>
            </div>
        </div>
    </div>
</div>

